[alias]
	br = branch
	changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
	ci = commit
	co = checkout
	di = diff
	nb = checkout -b
	st = status
	unstage = reset HEAD
[color]
	status = auto
	branch = auto
	diff = auto
[push]
	default = current
[branch]
	autosetupmerge = always
[core]
	editor = vim
	excludesfile = ~/.gitignore
[fetch]
	recurseSubmodules = true
[include]
	path = .gitconfig.local
